{% extends 'restrito.html.twig' %}

{% block header %}
<div id="logo"></div>
<div id="container">
    <div id="menu">
        <div id="title">
            <img src="{{ asset('images/user-icon.png') }}" class="action_icon"/>
            Listagem de Usu치rios
        </div>
        <div id="buttonAction">
            <a href="{{ path('user_index') }}"><img src="{{ asset('images/reload-icon.png') }}" class="action_icon" title="Recarregar"/></a>
            <a href="{{ path('user_new') }}" class="iframe"><img src="{{ asset('images/add-icon.png') }}" class="action_icon" title="Nova Empresa"/></a>
        </div>
    </div>
    <div id="conteudo">
{% endblock %}

{% block content %}
<div id="conteudo-right">
    <table class="table table-hover" id="tables">
        <thead>
            <tr>
                <th>Username</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th>Data de Cadastro</th>
                <th style="width:1px;"></th>
                <th style="width:1px;"></th>
                <th style="width:1px;"></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.telefone }}</td>
                <td>{% if user.createdAt %}{{ user.createdAt|date('d/m/Y') }}{% endif %}</td>
                <td class="center"><a href="javascript:;" onclick="AlteraStatus('{{ path('user_status', { 'id': user.id }) }}', '{{ user.id }}', '{{ user.isActive }}');"><img src="{% if user.isActive %}{{ asset('images/ativo-icon.png') }}{% else %}{{ asset('images/inativo-icon.png') }}{% endif %}" class="action_icon" id="img_{{ user.id }}" title="Usu치rio {% if user.isActive %}ativo{% else %}inativo{% endif %} &#013;Clique para alterar o status"></a></td>
                <!--<td class="center"><a href="{{ path('user_edit', { 'id': user.id }) }}" class="iframe"><img src="{{ asset('images/edit-icon.png') }}" class="action_icon" title="Editar Usu치rio"/></a></td>-->
                <td class="center">
                    {% if user.username != 'administrador' %}
                        <a href="{{ path('user_delete', { 'id': user.id }) }}" onclick="return DeletarUsuario('{{ user.username }}');"><img src="{{ asset('images/delete-icon.png') }}" class="action_icon" title="Excluir Usu치rio"></a>
                    {% else %}
                        --
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/user/index.js') }}"></script>
{% endblock %}
